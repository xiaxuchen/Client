<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    android:orientation="vertical">
    <com.cxyz.commons.widget.TitleView
        android:id="@+id/tv_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cxyz.commons.widget.TitleView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请完成已下认证"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入956***950@qq.com收到的邮箱验证码"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:background="@drawable/linerlayout_shapecolor"
            android:layout_weight="1" />
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_confirm_getcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_weight="1"
            app:qmui_radius="8dp"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            app:qmui_backgroundColor="#0aa0ff"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="40dp">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/bt_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:qmui_radius="8dp"
        android:layout_weight="1"
        android:text="下一步"
        android:textColor="#fff"
        app:qmui_backgroundColor="#0aa0ff" />
</LinearLayout>
</LinearLayout>
