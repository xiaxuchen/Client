<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.cxyz.commons.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        app:moreText="报表下载"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤人"
            android:textSize="16sp"
            android:textColor="@color/common_line"
            app:layout_constraintTop_toTopOf="@+id/tv_checker"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            />

        <TextView
            android:id="@+id/tv_checker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            android:text="夏旭晨"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_num_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_checker"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintRight_toRightOf="parent"
            android:text="课程编号"
            android:textColor="@color/common_line"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无"
            android:textColor="@color/app_black"
            app:layout_constraintLeft_toLeftOf="@+id/tv_checker"
            app:layout_constraintTop_toTopOf="@+id/tv_num_hint"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_hint"
            />

        <TextView
            app:layout_constraintHorizontal_bias="0.15"
            android:id="@+id/tv_edit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@drawable/mine_lesson_more_selector"
            app:layout_constraintLeft_toRightOf="@+id/tv_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_num"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_room_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_num_hint"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintRight_toRightOf="parent"
            android:text="所在教室"
            android:textColor="@color/common_line"
            />

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无"
            android:textColor="@color/app_black"
            app:layout_constraintLeft_toLeftOf="@+id/tv_checker"
            app:layout_constraintTop_toTopOf="@+id/tv_room_hint"
            app:layout_constraintBottom_toBottomOf="@+id/tv_room_hint"
            />

        <TextView
            app:layout_constraintHorizontal_bias="0.15"
            android:id="@+id/tv_edit_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@drawable/mine_lesson_more_selector"
            app:layout_constraintLeft_toRightOf="@+id/tv_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_room"
            />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="考勤记录"
        android:textColor="@color/app_black"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line"
        />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refrash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.widget.QMUIEmptyView
                android:id="@+id/ev_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"/>

            <ListView
                android:id="@+id/lv_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>