<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/vac_audit_background"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_type"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="请假条"
        android:textColor="@color/common_white"
        android:background="@drawable/vac_type_vac_photo_background_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_audit_state_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假类型:"
        android:textColor="#8a8a8a"
        android:textColorHighlight="@color/gray"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_vac_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="事假"
        app:layout_constraintLeft_toRightOf="@+id/tv_audit_state_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_audit_state_hint"
        />

    <TextView
        android:id="@+id/tv_audit_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始日期:"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_audit_state_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_audit_state_hint" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-12-30"
        app:layout_constraintStart_toEndOf="@+id/tv_audit_time_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_audit_time_hint" />

    <TextView
        android:id="@+id/tv_end_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束日期:"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_audit_state_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_audit_time_hint" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-12-31"
        app:layout_constraintStart_toEndOf="@+id/tv_end_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_end_hint" />

    <TextView
        android:id="@+id/tv_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假时间:"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_end_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_hint" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00-9:00"
        app:layout_constraintStart_toEndOf="@+id/tv_time_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_time_hint" />

    <TextView
        android:id="@+id/tv_week_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假星期:"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_time_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_hint" />

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周一"
        app:layout_constraintStart_toEndOf="@+id/tv_week_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_week_hint" />


    <TextView
        android:id="@+id/tv_len_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假时长:"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_week_hint"
        app:layout_constraintTop_toBottomOf="@+id/tv_week" />

    <TextView
        android:id="@+id/tv_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10天"
        app:layout_constraintStart_toEndOf="@+id/tv_len_hint"
        app:layout_constraintTop_toTopOf="@+id/tv_len_hint" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tv_reason_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假事由{vac-down}"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_len_hint"
        app:layout_constraintLeft_toLeftOf="@+id/tv_audit_state_hint" />

    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_reason_hint"
        app:layout_constraintLeft_toLeftOf="@id/tv_reason_hint"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="图片"
        app:layout_constraintTop_toBottomOf="@+id/tv_reason"
        app:layout_constraintLeft_toLeftOf="@+id/tv_reason_hint"
        />

    <GridView
        android:layout_marginTop="8dp"
        android:id="@+id/gv_imgs"
        android:numColumns="4"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:stretchMode="none"
        android:columnWidth="48dp"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_img"
        />


    <TextView
        android:id="@+id/tv_sponsor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="2018-12-12 10:10"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/gv_imgs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />

</android.support.constraint.ConstraintLayout>
